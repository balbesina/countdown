<div class="card">
  <div class="card-body">
    <h3 class="card-title"><%= @party.title %></h3>

    <p class="card-text">
      Planned at
      <span class="text-info"><%= @party.at.strftime('%m/%d/%Y %H:%M') %></span>
    </p>

    <h2 class="text-center counter" data-at="<%= @party.at.iso8601 %>">
      <%= time_diff(@party.at) %>
    </h2>

    <% if @party.description %>
      <% @party.description.split("\n").each do |line| %>
        <p class="card-text"><%= line %></p>
      <% end %>
    <% end %>
  </div>
</div>